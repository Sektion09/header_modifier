{
  "manifest_version": 3,
  "name": "header_modifier",
  "version": "1.1",
  "description": "modify http request headers",
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "publishIcon.png"
  },
  "action": {
    "default_icon": {
      "32": "publishIcon.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
      ],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }
  ]
}
